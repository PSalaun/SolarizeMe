<div class="navbar-solarize">
  <!-- Logo -->
  <div class="navbar-logo-with-text">
   <%= link_to "SolarizeMe", root_path, class: "navbar-solarize-brand" %>
 </div>


 <!-- Right Navigation -->
  <div class="navbar-right">
    <%= link_to "All projects", projects_path, class: "navbar-solarize-item navbar-solarize-link" %>
    <!-- Dropdown list appearing on mobile only -->
    <% if user_signed_in? %>
    <div class="navbar-solarize-item">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-solarize-dropdown-menu">
          <li>
            <%= link_to "All projects", projects_path, class: "navbar-solarize-item navbar-solarize-link" %>
          </li>
          <li>
            <%= link_to "My dashboard", user_path(current_user), class: "navbar-solarize-item navbar-solarize-link" %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <% else %>
    <%= link_to "Login", new_user_session_path %>
    <% end %>
  </div>
</div>
