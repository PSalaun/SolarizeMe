<div class="navbar-solarize" id="navbar">
  <!-- Logo -->
  <div class="navbar-solarize-logo-and-brand">
    <div class="navbar-solarize-logo">
      <%= icon("fas", "solar-panel") %>
    </div>
    <div class="navbar-solarize-brand">
      <%= link_to "SolarizeMe", root_path, class: "navbar-solarize-brand" %>
    </div>
  </div>

 <!-- Right Navigation -->
  <div class="navbar-solarize-right">
    <%= link_to "All projects", projects_path, class: "navbar-solarize-item navbar-solarize-link" %>
    <!-- Dropdown list appearing on mobile only -->
    <% if user_signed_in? %>
    <div class="navbar-solarize-item dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-solarize-dropdown-menu">
          <li>
            <%= link_to "All projects", projects_path, class: "navbar-solarize-item navbar-solarize-link" %>
          </li>
          <li>
            <%= link_to "My dashboard", user_path(current_user), class: "navbar-solarize-item navbar-solarize-link" %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <%= icon("fa", "sign-out-alt") %> <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
    </div>
    <% else %>
    <%= link_to "Login", new_user_session_path, class:"navbar-solarize-item navbar-solarize-link" %>
    <% end %>
  </div>
</div>
