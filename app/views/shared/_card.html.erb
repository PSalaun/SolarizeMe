<%= link_to project_path(card), class: "card-projects" do %>
  <%= cl_image_tag card.photo, class: "card-project-image" %>
  <div class="card-header-projects text-left">
    <div class="card-title-and-company-name">
      <h1> <%= card.name %> </h1>
      <h3> <%= card.user.company_name %> </h3>
    </div>
    <%= cl_image_tag card.user.photo, class: "card-company-logo" %>
  </div>


  <div class="card-financial-details text-left">
    <progress  max="100" value="<%= card.completion_rate %>"> <%= card.completion_rate %> </progress>
    <p> <%= humanized_money_with_symbol(card.funds_pledged) %> out of <%= humanized_money_with_symbol(card.total_cost) %>   raised </p>
    <p>Price per panel: <%= humanized_money_with_symbol(card.price) %></p>
    <p>Yield: <%= card.yield * 100 %> % per year  </p>
  </div>
  <div class="card-country-projects">
    <h2><%= card.status %></h2>
    <h1><%= card.country %></h1>
  </div>
<% end %>
