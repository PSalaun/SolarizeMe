<div class="wrapper-projects">
  <div class="container">
    <div class="page-header text-center">
      <h1>Our Projects</h1>
    </div>
    <div class="projects-filter-panel">
      <h2>Filters</h2>
      <div class="filter-location-panel">
        <div class="filter-panel-header">
          <p>Choose location</p>
        </div>
        <div class="location-form">
          <%= form_tag projects_path, method: "get" do  %>
            <%= select_tag "location", options_for_select(Project.pluck(:country).uniq), class: "dropdown-filter", include_blank: true %>
            <div class="category-choices">
              <%= check_box_tag("status[]", "Future crowdfunding", false, class: "hidden", id: "future") %>
              <label for="future" class="category-choice">Future crowdfunding</label>
              <%= check_box_tag("status[]", "Active crowdfunding",  false, class: "hidden", id: "active") %>
              <label for="active" class="category-choice">Active crowdfunding</label>
              <%= check_box_tag("status[]", "under construction", false, class: "hidden", id: "construction") %>
              <label for="construction" class="category-choice">Under construction</label>
              <%= check_box_tag("status[]", "Operational", false, class: "hidden", id: "operational") %>
              <label for="operational" class="category-choice">Operational</label>
            </div>
            <%= submit_tag "Filter", class: "btn-filter" %>
            <%= link_to "Reset", projects_path, class:"btn-reset-f" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="cards-wrapper">
      <div class="cards-list" id="js-cards-list">
        <%= render partial: 'shared/card', collection: @projects %>
      </div>
    </div>
  </div>
</div>
