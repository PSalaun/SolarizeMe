<div class="investment-container-form">
  <%= simple_form_for(([ @project, investment]), method: :post, url: project_investments_path(@project))  do |f| %>
    <%= f.input :number_of_panels, label: "Panels", required: true, wrapper_html: { class: 'number-panels-form', id: 'number-panels-selected-investment'}%>

    <%= f.button :submit, "Buy now", class: "btn btn-success" %>
  <% end %>
</div>


